extends  ../layout

block content
  h1=title 

  form(method='POST' action='' enctype='multipart/form-data')
    div.form-group
      label(for='name') Name: 
      input#name(type="text" name='name' required='true' value=(company === undefined ? '' : company.name))
      label(for='location') Location: 
      input#location(type="text" name='location' value=(company === undefined ? '' : company.location))
      label(for='founded') Founded: 
      input#founded(type="date" name='founded' value=(company === undefined || formattedDate  === '0001-01-01' ? '' : formattedDate))

      label(for='image') Image (JPG or PNG):
      input#image(type='file' name='image')

    button(type='submit') Submit

  if errors
    ul 
      for error in errors 
        l1= error.msg
