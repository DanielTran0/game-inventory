extends ../layout

block content
  h1 #{title}: #{company.name}

  div.delete 
    if games.length

      p Delete the following games before attempting to delete this company.

      div
        h4 Games

        dl
        each game in games
          dt
            a(href=`/game/${game.id}`) #{game.name}
            dd Price: #{game.price} Copies: #{game.copies}

    else
      p Do you really want to delete this company?

      form(method='POST' action='')
        div.form-group
          input(type='hidden', name='id', required='true', value=company.id )

        button(type='submit') Delete
